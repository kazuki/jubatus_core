# -*- python -*-
def configure(conf):
  pass

def build(bld):
  bld.install_files('${HPREFIX}/math', [
      'constant.h',
      'random.h',
      'random/license.h',
      'random/mersenne_twister.h',
      'random/xorshift128plus.h',
      'vector.h',
      'fft.h',
      ], relative_trick = True)

  bld.shlib(
    source = [
      'random/mersenne_twister.cpp',
      'random/xorshift128plus.cpp'
    ],
    target = 'jubatus_util_math',
    vnum = bld.env['ABI_VERSION'],
    includes = '.')
  
  def t(src):
    tgt = src.split('/')[-1].split('.')[0]
    bld.program(
      features = 'gtest',
      source = src,
      target = tgt,
      includes = '.',
      use = 'jubatus_util_math jubatus_util_system')

  t('random_test.cpp')
  t('ratio_test.cpp')
  t('vector_test.cpp')
  t('fft_test.cpp')
  t('include_test.cpp')
  t('instantiation_test.cpp')
